{
  "manifest_version": 3,
  "name": "Neumorphic TV Show Tracker",
  "description": "Track your favorite TV shows with a soft Neumorphic UI and next-episode countdowns using the TVmaze API.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Show Tracker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://api.tvmaze.com/*",
    "https://api.jikan.moe/*",
    "https://query.wikidata.org/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}


